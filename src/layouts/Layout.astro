---
import {isAdmin} from "../utils/auth-utils";
const pages = [
    {name: "Dashboard", href: "/"},
];

const user = Astro.locals.user;
if (isAdmin(user)) {
    pages.push({name: "User", href: "/admin/register-user"});
}
const title = Astro.props.title || import.meta.env.PUBLIC_TITLE || 'Astro-Lucia'
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
</head>
<body class="h-screen bg-gray-100">
<div class="flex h-full">

    <aside class="w-64 bg-gray-800 text-white flex flex-col">
        <div class="p-4 text-2xl font-bold">Astro-Lucia</div>
        <nav class="flex-1">
            <ul>
                {pages.map((page) => (
                        <li>
                            <a
                                    href={page.href}
                                    class="block px-4 py-2 hover:bg-gray-700"
                            >
                                {page.name}
                            </a>
                        </li>
                ))}
            </ul>
        </nav>
    </aside>


    <div class="flex-1 flex flex-col">

        <header class="bg-gray-800 border-b px-4 py-2 flex items-center justify-between">
            <div></div>
            <div class="flex items-center gap-4">
                <span class="text-gray-100">{user?.username}</span>
                <form method="post" action="/api/logout">
                    <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                        Sign out
                    </button>
                </form>
            </div>
        </header>

        <main class="p-4 flex-1">
            <slot/>
        </main>
    </div>
</div>
</body>
</html>

<script>
    document.forms[0].addEventListener("submit", async (e) => {
        e.preventDefault();
        const formElement = e.target as HTMLFormElement;
        await fetch(formElement.action, {
            method: formElement.method,
            body: new FormData(formElement)
        });
        window.location.href = "/login";
    });
</script>